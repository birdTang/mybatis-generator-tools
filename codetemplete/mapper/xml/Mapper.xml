<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="##{srcPack}##.mapper.##{domainObjectName}##Mapper">

<!-- **************以下映射必须与数据库一致 不要更改，除非数据库改变**************** -->
	<resultMap type="##{srcPack}##.entity.##{domainObjectName}##" id="baseResultMap">
		##{resultMap}##
	</resultMap>
	<insert id="insert" ##{autoGeneratedKeys}## parameterType="##{srcPack}##.entity.##{domainObjectName}##">
		##{insert}##
	</insert>
	<insert id="insertWithIf"  ##{autoGeneratedKeys}## parameterType="##{srcPack}##.entity.##{domainObjectName}##">
		##{insertWithIf}##
	</insert>
	<insert id="insertBatch"  ##{autoGeneratedKeys}## parameterType="java.util.List">
		##{insertBatch}##
	</insert>
	<insert id="insertBatchWithIf"  ##{autoGeneratedKeys}## parameterType="##{srcPack}##.entity.##{domainObjectName}##">
		##{insertBatchWithIf}##
	</insert>
	
	<delete id="deleteById" parameterType="java.lang.##{tablePrimaryKeyType}##">
		##{delete}##	
		WHERE ID=#{id}
	</delete>
	
	<delete id="deleteByIds" parameterType="java.util.Collection">
     	##{delete}##	
     	WHERE ID IN
     	<foreach collection="array" index="index" item="item" open="(" separator="," close=")"> #{item} </foreach> 
  	 </delete>
  	 
	<update id="update" parameterType="##{srcPack}##.entity.##{domainObjectName}##" >
		##{update}##
	</update>
	
	<update id="updateWithIf" parameterType="##{srcPack}##.entity.##{domainObjectName}##" >
		##{updateWithIf}##
	</update>
	
	<!-- *************************************************************************** -->
	<!-- **************以下映射根据业务做相应调整**************** -->
	<!-- *************************************************************************** -->
  	
  	<delete id="deleteByMap" parameterType="java.util.Map">
    	##{delete}##	 
    	<where>
    		
    	</where>
  	</delete>
	
	<select id="findById" parameterType="java.lang.##{tablePrimaryKeyType}##" resultMap="baseResultMap">
		##{find}##
		where a.Id=#{id}	
	</select>

	<select id="findListByMap" parameterType="java.util.Map" resultMap="baseResultMap">
		
		##{find}##
		
		<where>
			
		</where>

	</select>
	
	<select id="list" parameterType="java.util.Map" resultMap="baseResultMap">
		
		
		##{find}##
		
		<where>
			<if test="searchKeys!= null ">
				AND ( 1=2
				<foreach collection="searchKeys" index="index" item="item" >
					 OR a.id like #{item}
				</foreach> 
				)
			</if>
		</where>

		
	</select>
	
	<select id="findOneByMap" parameterType="java.util.Map" resultMap="baseResultMap">
		##{find}##
		<where>
		
		</where>
		limit 1
	</select>
</mapper>
	